
<html lang="en">
    <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      
      <link rel="stylesheet" href="/css/header-styles.css"/>
      
      <link href="/css/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <script>
        function openNav() {
          document.getElementById("mySidenav").style.width = "250px";
        }
        
        function closeNav() {
        document.getElementById("mySidenav").style.width = "0px";
        }
    window.onclick=function()
    {
      var hidesidenav=document.getElementById('mySidenav');
      var hidesidenavbtn=document.getElementById('sidenav-btn');
      window.onclick = function(event) {
        if (event.target != hidesidenav && event.target != hidesidenavbtn){
            hidesidenav.style.width = "0px";
        }
      }
    }
        
      </script>
<header>
    <div class="header-inner">
     
      <div class="header-inner-left">
        <div id="mySidenav" class="sidenav header-inner-left">
            <%if (!locals.session.loggedin) { %>
                <% }else{ %>
            <a href="javascript:void(0)" class="closesidenavbtn" onclick="closeNav()">&times;</a>
            <div class="sidenav-link-div"><a href="/profile">Profile</a></div>
            <div class="sidenav-link-div"><a href="/myrides">My rides</a></div>
            <div class="sidenav-link-div"><a href="/create">Create ride</a></div>
            <div class="sidenav-link-div"><a href="/find">Find ride</a></div>
            <div class="sidenav-link-div"><a href="/contactUs">Contact Us</a></div>
            <form class="sidenav-link-div" action="/logout?_method=DELETE" method="POST">
                <button type="submit">Logout</button>
            </form>
            <%}%>
        </div>
        <h3 style="text-align: start;">
            <%if (!locals.session.loggedin) { %>
                <a id="logo-name" href="/">SplitUp</a>
                <% }else{ %>
                    <span id="sidenav-btn" style=" font-size:30px;cursor:pointer; align-self: flex-start;" onclick="openNav()">&#9776; </span><a id="logo-name" href="/">SplitUp</a>
                    <%}%>
        </h3>
      </div>


      <div class="header-inner-centre"></div>


      <div id="header-inner-right-b-login">

        <%if (!locals.session.loggedin) { %>
          <div id="login&signup">
              <a href="/login"><button type="button" class="button-login">Login</button></a>
              <a href="/register"><button type="button" class="button-sign-up">Sign up</button></a>
          </div> 
          <div id="only-login"> 
              <a href="/login"><button type="button" class="button-login">Login</button></a>
          </div> 
          <div id="only-signup">
              <a href="/register"><button type="button" class="button-login"><!-- Here we want login button style --> Sign up</button></a>
          </div>   
        <% }else{ %>
            <a href="#"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
